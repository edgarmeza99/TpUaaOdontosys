<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/alertify.rtl.css">
    <link rel="stylesheet" href="/css/themes/default.rtl.css">

    <title>OdontosSystem</title>
</head>

<body class="bgd1">
<div>
    <nav id="menu">
        <ul>
            <li><a href="#">Registro</a>
                <ul>
                    <li><a href="#">Ventas</a></li>
                    <li><a href="#">Pendientes</a></li>
                </ul>

            </li>

            <li><a href="#">Operaciones</a>
                <!--Sub menu-->
                <ul>
                    <li id="cliente"><a href="/main/paciente">Pacientes</a></li>
                    <li><a href="#">Proveedores</a></li>
                    <li><a href="#">Consultas</a></li>
                </ul>
            </li>
            <li><a href="#">Mantenimiento</a>
                <!--Sub menu-->
                <ul>
                    <li><a>Productos</a></li>
                    <li><a>Tipo de Plan</a></li>
                </ul>
            </li>
            <li><a href="/login" id="salir">Salir</a></li>
        </ul>
    </nav>
</div>
<div class="clearfix"></div>
<div id="msg" class="mensajitos">
    <div id="mensaje" class="card">
        <div class="card-header" style="background-color: #bcdcc3;">
            <h3>Mensaje</h3>
        </div>
        <div class="card-body">
            <p id="textMng" style="font-size: 18px;">REGISTRO GRABADO</p>
        </div>
        <div id="botones">
        </div>
    </div>
</div>
<div class="formCli">
    #foreach($pac in $porPaciente)
        <form id="regCliente" method="post" action="/main/pacienteMod">

            <div class="col-2">
                <label>
                    Numero Documento
                    <input name="documento" value="$pac.getNumeroDoc()" readonly="readonly" tabindex="1"/>
                </label>
            </div>
            <div class="col-2">
                <label>
                    Nombre y Apellido
                    <input name="nombre" value="$pac.getNombre()" tabindex="2"/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    Teléfono
                    <input name="telefono" value="$pac.getTelefono()" tabindex="3"/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    Dirección
                    <input name="direccion" value="$pac.getDireccion()" tabindex="4"/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    Tipo de Plan
                    <select tabindex="5" name="plan">
                        <option>Ninguno</option>
                        <option>Estandar</option>
                        <option>Promo</option>
                        <option>Premium</option>
                    </select>
                </label>
            </div>
            <div class="col-submit">
                <button type="submit">Guardar</button>
                <button type="reset" class="cerrar"><a href="/main">Cerrar</a></button>
                <!--onclick="cargarCliente()"-->
            </div>

        </form>
    #end
</div>
<!--Detalle pacientes-->
<div class="contenedorTb">
    <div>
        <table class="table tbCabecera">
            <thead>
            <tr>
                <th width="9%" scope="col">Documento</th>
                <th width="23%" scope="col">Nombre y Apellido</th>
                <th width="12%" scope="col">Teléfono</th>
                <th width="23%" scope="col">Dirección</th>
                <th width="20%" scope="col">Tipo de Plan</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="scrollit">
        <table class="table table-striped tbDetalle">
            <tbody>
                #foreach($pac in $paciente)
                <tr>
                    <th name="thDocumento" width="9%" scope="row">$pac.getNumeroDoc()</th>
                    <td name="thNombre" width="24%">$pac.getNombre()</td>
                    <td name="thNumero" width="13%">$pac.getTelefono()</td>
                    <td name="thDireccion" width="23%">$pac.getDireccion()</td>
                    <td name="thTipo" width="20%">$pac.getTipoPlan()</td>
                    <td><a href="/main/paciente/$pac.getNumeroDoc()" class="btn btn-primary">Modificar</a>
                    <td><a class="btn btn-danger" onclick="eliminar($pac.getNumeroDoc())">Eliminar</a></td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>

<!--Comiensan los Scripts-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script src="/js/alertify.js"></script>
<script>

    function eliminar(id) {
        alertify.
        alertify.confirm('¿Esta seguro de eliminar este paciente?', function (e) {
            if (e) {
                location.href = "/main/paciente/eliminar/" + id;
            }
        });
    }


</script>
</body>

</html>