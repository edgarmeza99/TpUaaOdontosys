<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/alertify.rtl.css">
    <link rel="stylesheet" href="/css/themes/default.rtl.css">
    <title>OdontosSystem</title>
</head>

<body class="bgd1">
<div>
    <nav id="menu">
        <ul>
            <li><a href="#">Registro</a>
                <ul>
                    <li><a href="#">Ventas</a></li>
                    <li><a href="#">Pendientes</a></li>
                </ul>

            </li>

            <li><a href="#">Operaciones</a>
                <!--Sub menu-->
                <ul>
                    <li id="cliente"><a href="/main/paciente">Pacientes</a></li>
                    <li><a href="/main/proveedor">Proveedores</a></li>
                    <li><a href="#">Consultas</a></li>
                </ul>
            </li>
            <li><a href="#">Mantenimiento</a>
                <!--Sub menu-->
                <ul>
                    <li><a>Productos</a></li>
                    <li><a>Tipo de Plan</a></li>
                </ul>
            </li>
            <li><a href="/login" id="salir">Salir</a></li>
        </ul>
    </nav>
</div>
<div class="clearfix"></div>
<div class="container">
    <div class="formCli">

        <form id="regCliente" method="post" action="/main/usuario">

            <div class="col-2">
                <label>
                    Nombre Usuario
                    <input name="nombre" id="clave" placeholder="Nombre Usuario" tabindex="2" required/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    mail
                    <input name="mail" placeholder="mail" tabindex="3" required/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    pass
                    <input name="pass" type="password" placeholder="pass" tabindex="4" required/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    rol
                    <input name="rol" placeholder="rol" tabindex="5" required/>
                </label>
            </div>
            <div class="col-3">
                <label>
                    Telefono
                    <input name="telefono" placeholder="telefono" tabindex="6" required/>
                </label>
            </div>
            <div class="col-submit">
                <button type="submit">Guardar</button>
                <button type="reset" class="cerrar"><a href="/main">Cerrar</a></button>
                <!--onclick="cargarCliente()"-->
            </div>

        </form>
    </div>
</div>
<!--Detalle proveedor-->
<div class="container">
    <div>
        <table class="table tbCabecera">
            <thead>
            <tr>
                <th width="14%" scope="col">Nombre</th>
                <th width="9%" scope="col">Mail</th>
                <th width="20%" scope="col">Rol</th>
                <th width="10%" scope="col">Telefono</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="scrollit">
        <table class="table table-striped tbDetalle">
            <tbody>
                #foreach($u in $usuario)
                <tr>
                    <th name="thNombre" width="9%" scope="row">$u.getNombre()</th>
                    <td name="thMail" width="13%">$u.getMail()</td>
                    <td name="thRol" width="9%">$u.getRol()</td>
                    <td name="thProm" width="20%">$u.getTelefono()</td>
                    <td><a href="/main/usuario/$u.getUsuId()" class="btn btn-primary">Modificar</a></td>
                    <td><a class="btn btn-danger" onclick="eliminar('$u.getUsuId()','usuario')">Eliminar</a></td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>

<!--Comiensan los Scripts-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
