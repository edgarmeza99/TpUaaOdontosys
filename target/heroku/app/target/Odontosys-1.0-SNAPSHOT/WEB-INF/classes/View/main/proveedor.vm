                </ul>
            </li>
            <li><a href="/login" id="salir">Salir</a></li>
        </ul>
    </nav>
</div>
<div class="clearfix"></div>
<div id="msg" class="mensajitos">
    <div id="mensaje" class="card">
        <div class="card-header" style="background-color: #bcdcc3;">
            <h3>Mensaje</h3>
        </div>
        <div class="card-body">
            <p id="textMng" style="font-size: 18px;">REGISTRO GRABADO</p>
        </div>
        <div id="botones">
        </div>
    </div>
</div>
<div class="formCli">

    <form id="regCliente" method="post" action="/main/proveedor">
        <div class="col-2">
            <label>
                Numero Documento
                <input name="documento" placeholder="Numero Documento" tabindex="1"/>
            </label>
        </div>
        <div class="col-2">
            <label>
                Nombre Proveedor
                <input name="nombre" placeholder="Nombre Proveedor" tabindex="2"/>
            </label>
        </div>
        <div class="col-3">
            <label>
                Direcci√≥n
                <input name="direccion" placeholder="Direccion" tabindex="3"/>
            </label>
        </div>
        <div class="col-3">
            <label>
                Telefono
                <input name="telefono" placeholder="Telefono" tabindex="4"/>
            </label>
        </div>
        <div class="col-3">
            <label>
                Correo
                <input name="correo" placeholder="correo" tabindex="5"/>
            </label>
        </div>
        <div class="col-3">
            <label>
                Tipo de Proveedor
                <select tabindex="6" name="tipo">
                    <option>Proveedor Local</option>
                    <option>Proveedor Exterior</option>
                </select>
            </label>
        </div>
        <div class="col-3">
            <label>
                Estado
                <select tabindex="7" name="estado">
                    <option>Activo</option>
                    <option>Inactivo</option>
                </select>
            </label>
        </div>
        <div class="col-submit">
            <button type="submit">Guardar</button>
            <button type="reset" class="cerrar"><a href="/main">Cerrar</a></button>
            <!--onclick="cargarCliente()"-->
        </div>

    </form>
</div>
<!--Detalle proveedor-->
<div class="contenedorTb">
    <div>
        <table class="table tbCabecera">
            <thead>
            <tr>
                <th width="9%" scope="col">Documento</th>
                <th width="14%" scope="col">Nombre</th>
                <th width="13%" scope="col">Direccion</th>
                <th width="9%" scope="col">Telefono</th>
                <th width="20%" scope="col">Correo</th>
                <th width="10%" scope="col">Tipo</th>
                <th width="10%" scope="col">Estado</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="scrollit">
        <table class="table table-striped tbDetalle">
            <tbody>
                #foreach($pro in $proveedor)
                <tr>
                    <th name="thDocumento" width="9%" scope="row">$pro.getPro_ruc()</th>
                    <td name="thNombre" width="14%">$pro.getPro_nombre()</td>
                    <td name="thDireccion" width="13%">$pro.getPro_direccion()</td>
                    <td name="thTelefono" width="9%">$pro.getPro_telefono()</td>
                    <td name="thCorreo" width="20%">$pro.getPro_correo()</td>
                    <td name="thTipo" width="10%">$pro.getPro_tipo()</td>
                    <td name="thEstado" width="10%">$pro.getPro_estado()</td>
                    <td><a href="proveedor/$pro.getPro_Ruc()" class="btn btn-primary btnMod">Modificar</a></td>
                    <td><a  class="btn btn-danger" onclick="eliminar($pro.getPro_ruc())">Eliminar</a></td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>

