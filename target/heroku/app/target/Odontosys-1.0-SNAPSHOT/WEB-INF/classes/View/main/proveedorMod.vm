</head>

<body class="bgd1">
<div>
    <nav id="menu">
        <ul>
            <li><a href="#">Registro</a>
                <ul>
                    <li><a href="#">Ventas</a></li>
                    <li><a href="#">Pendientes</a></li>
                </ul>

            </li>

            <li><a href="#">Operaciones</a>
                <!--Sub menu-->
                <ul>
                    <li id="cliente"><a href="/main/paciente">Pacientes</a></li>
                    <li><a href="/main/proveedor">Proveedores</a></li>
                    <li><a href="#">Consultas</a></li>
                </ul>
            </li>
            <li><a href="#">Mantenimiento</a>
                <!--Sub menu-->
                <ul>
                    <li><a>Productos</a></li>
                    <li><a>Tipo de Plan</a></li>
                </ul>
            </li>
            <li><a href="/login" id="salir">Salir</a></li>
        </ul>
    </nav>
</div>
<div class="clearfix"></div>
<div class="container">
    <div class="formProv">
        #foreach($pro in $porProveedor)
            <form id="regProveedor" method="post" action="/main/proveedorMod">
                <div class="col-2">
                    <label>
                        Numero Documento
                        <input name="documento" id="clave" placeholder="Numero Documento" value="$pro.getPro_ruc()"
                               tabindex="1" required/>
                    </label>
                </div>
                <div class="col-2">
                    <label>
                        Nombre Proveedor
                        <input name="nombre" id="descripcion" placeholder="Nombre Proveedor"
                               value="$pro.getPro_nombre()" tabindex="2" required/>
                    </label>
                </div>
                <div class="col-3">
                    <label>
                        Direcci√≥n
                        <input name="direccion" placeholder="Direccion" value="$pro.getPro_direccion()" tabindex="3"
                               required/>
                    </label>
                </div>
                <div class="col-3">
                    <label>
                        Telefono
                        <input name="telefono" placeholder="Telefono" value="$pro.getPro_telefono()" tabindex="4"
                               required/>
                    </label>
                </div>
                <div class="col-3">
                    <label>
                        Correo
                        <input name="correo" placeholder="correo" value="$pro.getPro_correo()" tabindex="5" required/>
                    </label>
                </div>
                <div class="col-3">
                    <label>
                        Tipo de Proveedor
                        <select tabindex="6" name="tipo" value="$pro.getPro_tipo()">
                            <option>Proveedor Local</option>
                            <option>Proveedor Exterior</option>
                        </select>
                    </label>
                </div>
                <div class="col-3">
                    <label>
                        Estado
                        <select tabindex="7" name="estado" value="$pro.getPro_estado()">
                            <option>Activo</option>
                            <option>Inactivo</option>
                        </select>
                    </label>
                </div>
                <div class="col-submit">
                    <button type="submit">Guardar</button>
                    <button type="reset" class="cerrar"><a href="/main">Cerrar</a></button>
                    <!--onclick="cargarCliente()"-->
                </div>

            </form>
        #end
    </div>
</div>
<!--Detalle proveedores-->
<div class="container">
    <div>
        <table class="table tbCabecera">
            <thead>
            <tr>
                <th width="9%" scope="col">Documento</th>
                <th width="14%" scope="col">Nombre</th>
                <th width="13%" scope="col">Direccion</th>
                <th width="9%" scope="col">Telefono</th>
                <th width="20%" scope="col">Correo</th>
                <th width="10%" scope="col">Tipo</th>
                <th width="10%" scope="col">Estado</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="scrollit">
        <table class="table table-striped tbDetalle">
            <tbody>
                #foreach($pro in $proveedor)
                <tr>
                    <th name="thDocumento" width="9%" scope="row">$pro.getPro_ruc()</th>
                    <td name="thNombre" width="14%">$pro.getPro_nombre()</td>
                    <td name="thDireccion" width="13%">$pro.getPro_direccion()</td>
                    <td name="thTelefono" width="9%">$pro.getPro_telefono()</td>
                    <td name="thCorreo" width="20%">$pro.getPro_correo()</td>
                    <td name="thTipo" width="10%">$pro.getPro_tipo()</td>
                    <td name="thEstado" width="10%">$pro.getPro_estado()</td>
                    <td><a href="/main/proveedor/$pro.getPro_ruc()" class="btn btn-primary">Modificar</a>
                    <td><a class="btn btn-danger" onclick="eliminar('$pro.getPro_ruc()','proveedor')">Eliminar</a></td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>

